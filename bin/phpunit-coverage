#!/bin/sh
PHPUNIT_PATH=`which phpunit`
/usr/bin/env php \
    --define memory_limit=512M \
    --define apc.enabled=1 \
    --define apc.enable_cli=1 \
    --define apc.cache_by_default=0 \
    $PHPUNIT_PATH \
    --configuration vendor/icecave/testing/phpunit-config/phpunit.coverage.xml \
    "$@"
