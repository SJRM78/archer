{
    "name": "icecave/archer",
    "description": "PHP testing and continuous integration by convention.",
    "keywords": ["testing", "phpunit", "unit", "test", "phake", "coverage", "artifacts"],
    "homepage": "https://github.com/IcecaveStudios/archer",
    "license": "MIT",
    "authors": [
        {
            "name": "James Harris",
            "email": "james.harris@icecave.com.au"
        },
        {
            "name": "Erin Millard",
            "email": "ezzatron@gmail.com",
            "homepage": "http://ezzatron.com/"
        }
    ],
    "require": {
        "phake/phake": "~1",
        "symfony/console": "~2",
        "symfony/process": "~2"
    },
    "suggest": {
        "ext-openssl": "OpenSSL is required to encrypt GitHub OAuth tokens for artifact publication."
    },
    "bin": [
        "bin/archer",
        "bin/woodhouse"
    ],
    "autoload": {
        "psr-0": {
            "Icecave\\Archer": "lib"
        }
    },
    "scripts": {
        "post-update-cmd": [
            "bin/archer internal:update-binaries"
        ]
    }
}
