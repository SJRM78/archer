{
    "name": "icecave/archer",
    "description": "Testing, CI and documentation of PHP projects by convention.",
    "keywords": [
        "testing",
        "phpunit",
        "unit",
        "test",
        "phake",
        "coverage",
        "artifacts",
        "documentation",
        "api",
        "project",
        "convention"
    ],
    "homepage": "https://github.com/IcecaveStudios/archer",
    "license": "MIT",
    "authors": [
        {
            "name": "James Harris",
            "email": "james.harris@icecave.com.au",
            "homepage": "https://github.com/jmalloc"
        },
        {
            "name": "Erin Millard",
            "email": "ezzatron@gmail.com",
            "homepage": "http://ezzatron.com/"
        }
    ],
    "require": {
        "php": ">=5.3",
        "sami/sami": "^3",
        "symfony/console": "^2",
        "symfony/process": "^2"
    },
    "require-dev": {
        "eloquent/liberator": "^2",
        "eloquent/phony": "dev-feature/default-to-full",
        "phpunit/phpunit": "^4"
    },
    "suggest": {
        "ext-openssl": "OpenSSL is required to encrypt GitHub OAuth tokens for artifact publication."
    },
    "bin": [
        "bin/archer",
        "bin/woodhouse"
    ],
    "autoload": {
        "psr-4": {
            "Icecave\\Archer\\": "src"
        }
    },
    "autoload-dev": {
        "classmap": ["test/src"]
    },
    "scripts": {
        "post-update-cmd": [
            "bin/archer internal:update-binaries"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "1.3.x-dev"
        }
    }
}
