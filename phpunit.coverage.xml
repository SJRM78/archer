<phpunit
    bootstrap="test/bootstrap.php"
    strict="true"
    convertErrorsToExceptions="true"
    convertNoticesToExceptions="true"
    convertWarningsToExceptions="true"
    mapTestClassNameToCoveredClassName="true"
    verbose="true"
    colors="true"
    timeoutForSmallTests="60"
>
    <testsuites>
        <testsuite>
            <directory>test/suite</directory>
        </testsuite>
    </testsuites>

    <logging>
        <log
            type="coverage-text"
            target="artifacts/coverage/coverage.txt"
        />

        <log
            type="coverage-html"
            target="artifacts/coverage"
            charset="UTF-8"
            yui="true"
            highlight="true"
        />
    </logging>

    <filter>
        <whitelist>
            <directory>lib</directory>
        </whitelist>
    </filter>
</phpunit>
